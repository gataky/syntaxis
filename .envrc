export PYTHONDONTWRITEBYTECODE=1

# Load asdf to get the correct Python version
use asdf

# Create and activate uv virtual environment with the correct Python version
export VIRTUAL_ENV=.venv
if [ ! -d "$VIRTUAL_ENV" ]; then
  uv venv "$VIRTUAL_ENV" --python "$(asdf which python)"
fi

PATH_add "$VIRTUAL_ENV/bin"
export UV_PROJECT_ENVIRONMENT="$VIRTUAL_ENV"


export SYNTAXIS_LOG_LEVEL="DEBUG"
